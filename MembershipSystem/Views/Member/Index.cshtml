
@{
    ViewData["Title"] = "Index";
}
@model UserViewModel


<div class="row">
    
    <div class="col-md-4 offset-md-4 mb-3 text-center">
        

        <user-picture-thumbnail class="rounded rounded-circle mb-3" style="height:300px" picture-url="@Model.PictureUrl"></user-picture-thumbnail>

    </div>
</div>

<div class="row">
    <div class="text-center ">
        <h1 class="fw-bold text">Kullanıcı Bilgileri </h1>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Telefon Numarası</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                    <td> 
                        <a type="submit" class="btn btn-primary" asp-controller="Member" asp-action="UserEdit">Bilgilerini Güncelle</a>
                        <a type="submit" class="btn btn-danger" asp-controller="Member" asp-action="PasswordChange">Şifre Değiştir</a>
                        </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

