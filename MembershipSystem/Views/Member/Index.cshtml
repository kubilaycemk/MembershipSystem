
@{
    ViewData["Title"] = "Index";
}
@model UserViewModel
<h1>Kullanıcı Bilgileri </h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Telefon Numarası</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                    <td> <a type="submit" class="btn btn-danger" asp-controller="Member" asp-action="PasswordChange">Şifre Değiştir</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

