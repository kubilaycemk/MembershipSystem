@if (User.Identity!.IsAuthenticated)
{
    <ul class="navbar-nav me-0">
        <li class="nav-item dropdown ">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity.Name
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item " asp-route-returnurl ="/Home/Index" asp-controller="Member" asp-action="LogOut">Çıkış Yap</a></li>

            </ul>
        </li>

    </ul>
}
else
{
    <a class="btn btn-outline-success mx-1" asp-area="" asp-controller="Home" asp-action="SignIn">Giriş Yap</a>
    <a class="btn btn-outline-info" asp-area="" asp-controller="Home" asp-action="SignUp">Kayıt Ol</a>
}